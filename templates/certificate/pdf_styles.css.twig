.text-center {
    text-align: center;
}

.text-right {
    text-align: right;
}

.text-left {
    text-align: left;
}

body {
    font-family: AirbnbCereal, sans-serif;
    background-color: #f7f7f8;
    padding: 2rem 3rem;
}

table {
    border-collapse: collapse;
}

.certificate-logo {
    height: 64px;
    display: block;
    margin-bottom: 2rem;
}

.certificate-title {
    font-size: 1.8rem;
    font-weight: bold;
    margin: 1rem 0 2rem;
    line-height: 1.4;
}

.certificate-subtitle {
    font-size: 0.8rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: #555;
    font-weight: 700;
}

.certificate-footer {
    margin-top: 4rem;
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
}

.certificate-learner {
    font-size: 1.4rem;
    font-weight: bold;
    margin-top: 3rem;
}

.mb-0 {
    margin-bottom: 0;
}

.mt-3 {
    margin-top: 3rem;
}

.meta {
    font-size: 0.8rem;
    color: #333;
}

.strong {
    font-weight: bold;
}