	class="main-content">
	{# {{ render(controller('App\\Controller\\SearchController::searchBar')) }} #}
	<div class="d-flex">
		<div class="w-100">
			<div class="d-md-flex justify-content-md-between align-items-center spacer-section">
				<div class="flex-fill mb-6 mb-md-0">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item">
								<a href="{{ path('app_courses_list') }}" class="text-muted">Programmes</a>
							</li>
							<li class="breadcrumb-item active" aria-current="page">Sommaire</li>
						</ol>
					</nav>
					<h1 class="pr-md-6 d-md-block fw-semibold d-none">{{ program.name }}</h1>
					{% include "partials/_dropdown_menu_section.html.twig" %}
